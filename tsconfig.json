{
  "compilerOptions": {
    "module": "esnext",
    "types": ["vite/client", "node", "element-plus/global"],
    "lib": ["ESNext", "dom"],
    "declaration": false,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "docs/.vuepress/**/*.d.ts",
    "docs/.vuepress/**/*.ts",
    "docs/.vuepress/**/*.vue",
    "docs/**/*.vue",
    "docs/**/*.ts",
    "docs/.vuepress/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
